# Copy this file to .env and add your real API key(s).
# Provider options: goldapi | metalpriceapi
PRICE_PROVIDER=goldapi

# Gold API (https://api.gold-api.com/price/{symbol})
GOLDAPI_KEY=your_goldapi_key_here
# Optional override/fallbacks if your network blocks the default host.
GOLDAPI_BASE_URL=https://api.gold-api.com/price
# GOLDAPI_FALLBACK_BASE_URLS=https://your-mirror-host/price

# MetalpriceAPI (optional alternative provider)
METALPRICEAPI_KEY=your_metalpriceapi_key_here
